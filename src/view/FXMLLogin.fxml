<AnchorPane id="AnchorPane" prefHeight="473.0" prefWidth="638.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.FXMLLoginController">
    <children>
      <ImageView fitHeight="476.0" fitWidth="846.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../resources/login.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="329.0" fitWidth="327.0" layoutX="300.0" layoutY="90.0" opacity="0.34" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../resources/glass.png" />
         </image>
         <effect>
            <GaussianBlur radius="1.55" />
         </effect>
      </ImageView>
      <Label layoutX="353.0" layoutY="130.0" text="Welcome" textFill="WHITE">
         <font>
            <Font name="Raleway SemiBold" size="34.0" />
         </font>
      </Label>
      <TextField fx:id="txtEmail" focusTraversable="false" layoutX="331.0" layoutY="191.0" prefHeight="27.0" prefWidth="185.0" promptText="Email">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </TextField>
      <TextField fx:id="txtPassword" focusTraversable="false" layoutX="331.0" layoutY="231.0" prefHeight="27.0" prefWidth="185.0" promptText="Password">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </TextField>
      <Button fx:id="loginBtn" layoutX="333.0" layoutY="300.0" mnemonicParsing="false" onAction="#loginBtnPressed" prefHeight="27.0" prefWidth="183.0" style="-fx-background-color: #4C3388;" text="Login" textFill="WHITE">
